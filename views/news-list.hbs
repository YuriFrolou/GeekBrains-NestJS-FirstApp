{{#if news}}
  <div class='row d-flex'>
    {{#each news}}
      <div class='col-12 col-lg-6'>
        <div class='card'>
            <img
                    src='http://localhost:3000/{{this.thumbnail}}'
                    class='card-img-top'
                    alt='thumbnail'
            />
          <div class='card-body'>
            <h5 class='card-author mb-3'>{{this.author}}</h5>
            <h6 class='card-subtitle mb-3 text-muted'>
              Автор:
              {{this.author}}
            </h6>
            <h6 class='card-subtitle mb-3 text-muted'>
              Дата создания:
              {{this.date}}
            </h6>
            <p class='card-text mb-3'>{{this.text}}</p>
          </div>


            <div class="card-body">
                <h5 class='card-title mb-3'>Комментарии</h5>
                {{#if this.comments}}
                    {{#each this.comments}}
                        <div class="comment-item mb-3 ">
                            <h6 class='card-subtitle mb-3 text-muted'>
                                Автор:
                                {{author}}
                            </h6>
                            <h6 class="card-subtitle mb-3 text-muted"> Дата создания: {{date}}</h6>
                            <p class="card-text mb-3 text-muted">{{text}}</p>

                        </div>
                    {{/each}}
                {{else}}
                    <p>Комментариев нет</p>
                {{/if}}
            </div>


        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1>Список новостей пуст!</h1>
{{/if}}